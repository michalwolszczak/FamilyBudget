@using MVC.ViewModel;
@model RegisterViewModel

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-md-4">
        <form method="post">
            <h2>Create a new account</h2>
            <hr />

            <div class="form-floating">
                <input asp-for="Email" class="form-control" aria-required="true" />
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" aria-required="true" />
                <label asp-for="Password"></label>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="ConfirmPassword"></label>
            </div>

            <hr/>
            
            <div>
                <button type="submit" class="w-100 btn btn-primary">Register</button>
            </div>            
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>
